<div id="cuadro">
<h3 class= "center upper red"> Etapa 1</h3>
<hr>
	<h4 class="red upper">Entender el Reto</h4>
<% @team.challenges.each do |challenge| %>

<p>
  <strong>Definicion:</strong>
  <%= challenge.definicion %>
  <%= link_to "Descargar Definicion", challenge.definicion.url, class: "button button_grey button_block" %>
</p>

<p>
  <strong>Resumen:</strong>
  <%= challenge.resumen %>
  <%= link_to "Descargar Resumen", challenge.resumen.url, class: "button button_grey button_block" %>
</p>

<p>
  <strong>Reto innovacion:</strong>
  <%= challenge.reto_innovacion %>
  <%= link_to "Descargar Reto de Innovación", challenge.reto_innovacion.url, class: "button button_grey button_block" %>
</p>

<br><h5 class="red upper center">Calificación</h5>
<hr>
<% if challenge.first_reviews.present? %>
<h4>Número de calificaciones: <%= challenge.first_reviews.count %></h4>
<h5>Calificación promedio

  <%= @a = challenge.first_reviews.average(:q1).round(2) 
      @b = challenge.first_reviews.average(:q2).round(2)
      @c = challenge.first_reviews.average(:q3).round(2)
      @d = challenge.first_reviews.average(:q4).round(2)
      @e = challenge.first_reviews.average(:q5).round(2)
      @f = challenge.first_reviews.average(:q6).round(2)
      @total = @a + @b + @c + @d + @e + @f

      @total %></h5>


<%= link_to 'New Review', new_challenge_first_review_path(challenge, @first_review), :class => "btn btn-info" %>

<% else %>

<%= link_to 'New Review', new_challenge_first_review_path(challenge, @first_review), :class => "btn btn-info" %>
<% end %>

<% end %>

</div>


