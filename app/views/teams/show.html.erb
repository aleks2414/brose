<div id="cuadro">
<h3 class= "center upper red"> Etapa 1</h3>
<hr>
	<h4 class="red upper">Entender el Reto</h4>
<% @team.challenges.each do |challenge| %>

<p>
  <strong>Definicion del Cliente:</strong>
  <%= challenge.definicion %>
  <%= link_to "Descargar Definicion", challenge.definicion.url, class: "button button_grey button_block" %>
</p>

<p>
  <strong>Resumen de Insights:</strong>
  <%= challenge.resumen %>
  <%= link_to "Descargar Resumen", challenge.resumen.url, class: "button button_grey button_block" %>
</p>

<p>
  <strong>Reto innovacion:</strong>
  <%= challenge.reto_innovacion %>
  <%= link_to "Descargar Reto de Innovación", challenge.reto_innovacion.url, class: "button button_grey button_block" %>
</p>


<% end %>
<hr>
</div>

<div id="cuadro">
<h4 class="red upper">Calificaciones Primera Etapa</h4>

<%= form_for [@team, @one_score], :html => {:id => 'one_form'} do |f| %>

<div class="field">
    <%= f.label :name, '¿El cliente y usuario están bien definidos y entendidos?' %><br>
    <%= f.select :r1, [["Existen razones contundentes para decir quién es el cliente y quién es el usuario", 10], ["Hay razones aunque difusas de quién es el cliente y quién el usuario", 5], ["No está claro quién es el cliente y quién es el usuario", 1]]%>
  </div>
  <div class="field">
    <%= f.label :name, '¿La problemática está bien entendida y es un tema relevante para el cliente?'%><br>
        <%= f.select :r2, [["Está clara cuál es la problemática que quieren resolver y es relevante para el cliente", 10], ["La problemática no está clara o no arece ser relevante para el cliente/usuario", 5], ["No está clara cuál es la problemática que quieren resolver", 1]]%>
  </div>
  <div class="field">
    <%= f.label :name, '¿Se encontraron insights significativos?' %><br>
    <%= f.select :r3, [["Los insights encontrados fueron claves para entender el problema", 10], ["Los insights ayudaron poco a entender el problema", 5], ["Los insights elegidos no aportaron información relevante", 1]]%>
  </div>
  <div class="field">
    <%= f.label :name, '¿El reto de innovación está basado en insights?' %><br>
    <%= f.select :r4, [["El reto de innovación está basado en insights ", 10], ["El reto de innovación no está basado en insights", 1]]%>
  </div>
  <div class="field">
    <%= f.label :name, '¿El reto de innovación está escrito de manera correcta?' %><br>
    <%= f.select :r5, [["El reto tiene la estructura correcta en su planteamiento", 10], ["El reto hace sentido pero no está escrito de manera correcta", 5], ["El reto no hace sentido y no está escrito correctamente", 1]]%>
  </div>

  <div class="actions">
    <%= f.submit class: "button button_red" %>
  </div>

<% end %>

<h3>Calificación:</h3>
<h3> <%= @team.one_score_r1 %> (<%= @team.one_scores.count%>) </h3>


</div>


<div id="cuadro">
<h3 class= "center upper red"> Etapa 2</h3>
<hr>
	<h4 class="red upper">Definición de Concepto</h4>

<% @team.advantages.each do |advantage| %>

<p>
  <strong>Proceso General:</strong>
  <%= advantage.boceto %>
  <%= link_to "Descargar Proceso General", advantage.boceto.url, class: "button button_grey button_block" %>
</p>

<p>
  <strong>Prototipo Conceptual:</strong>
  <%= advantage.infografia %>
  <%= link_to "Descargar Prototipo Conceptual", advantage.infografia.url, class: "button button_grey button_block" %>
</p>


<% end %>

<hr>

</div>

<div id="cuadro">
