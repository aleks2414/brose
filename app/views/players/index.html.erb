<p id="notice"><%= notice %></p>

<h1>Listing Players</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Departamento</th>
      <th>Funcion</th>
      <th>Planta</th>
      <th>Type</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.nombre %></td>
        <td><%= player.departamento %></td>
        <td><%= player.funcion %></td>
        <td><%= player.planta %></td>
        <td><%= player.type %></td>
        <td><%= player.team %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

